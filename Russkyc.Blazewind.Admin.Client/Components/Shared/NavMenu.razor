<MudNavMenu Rounded="true"
            Color="Color.Primary"
            Class="m-2">
    <MudStack Spacing="2">
        <MudNavLink Href="/"
                    IconColor="Color.Inherit"
                    Icon="@Icons.Material.Rounded.Dashboard"
                    Match="NavLinkMatch.All">
            Dashboard
        </MudNavLink>
        <MudNavLink Href="/products"
                    IconColor="Color.Inherit"
                    Icon="@Icons.Material.Rounded.Apps"
                    Match="NavLinkMatch.All">
            Products
        </MudNavLink>
        <MudNavLink Href="/billing"
                    IconColor="Color.Inherit"
                    Icon="@Icons.Material.Rounded.CreditCard"
                    Match="NavLinkMatch.All">
            Billing
        </MudNavLink>
        <MudNavLink Href="/invoice"
                    IconColor="Color.Inherit"
                    Icon="@Icons.Material.Rounded.Notes"
                    Match="NavLinkMatch.All">
            Invoice
        </MudNavLink>
        <MudNavGroup Icon="@Icons.Material.Rounded.VerifiedUser"
                     Title="Authentication"
                     HideExpandIcon="true">
            <MudStack Spacing="2"
                      Class="my-2">
                <MudNavLink Href="/login"
                            IconColor="Color.Inherit"
                            Icon="@Icons.Material.Rounded.Person"
                            Match="NavLinkMatch.All">
                    Login
                </MudNavLink>
                <MudNavLink Href="/register"
                            IconColor="Color.Inherit"
                            Icon="@Icons.Material.Rounded.HowToReg"
                            Match="NavLinkMatch.All">
                    Register
                </MudNavLink>
            </MudStack>
        </MudNavGroup>
        <MudNavLink Href="/profile"
                    IconColor="Color.Inherit"
                    Icon="@Icons.Material.Rounded.Person"
                    Match="NavLinkMatch.All">
            Profile
        </MudNavLink>
    </MudStack>
</MudNavMenu>