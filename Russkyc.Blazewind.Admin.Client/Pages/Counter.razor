@page "/counter"

<PageTitle>Counter</PageTitle>
<MudBreadcrumbs Items="@_breadcrumbItems"></MudBreadcrumbs>
<MudStack Spacing="4" Class="m-4">
    <MudText Typo="Typo.h4">Counter</MudText>
    <MudText Typo="Typo.body1">Current count: @currentCount</MudText>
    <MudButton DisableElevation="true" Variant="Variant.Filled" Color="Color.Primary" OnClick="@IncrementCount">Click me</MudButton>
</MudStack>

@code {
    private int currentCount = 0;

    private List<BreadcrumbItem>? _breadcrumbItems = new()
    {
        new BreadcrumbItem("Dashboard", "/"),
        new BreadcrumbItem("Counter", "/counter")
    };

    private void IncrementCount()
    {
        currentCount++;
    }

}